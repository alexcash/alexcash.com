<section class="me blog-me">
	<div class="alphaBackground"></div>
	<header>
		<h1>Blog</h1>
		<p>The writing of Alex Cash. Dangerous thoughts from a dangerous man.</p>
	</header>
	<nav class="blogNav">
		<ul>
			<li><a href="http://www.twitter.com/alexcash">Twitter</a></li>
			<li><a href="http://www.github.com/alexcash">Github</a></li>
			<li><a href="http://www.linkedin.com/pub/alex-cash/48/460/307">Linkedin</a></li>
			<li><a href="../">Home</a></li>
		</ul>
	</nav>
</section>

<section class="row">
	<% blog.articles[0...3].each do |article| %>
	  <article>
	    <h2><a href="<%= article.url %>"><%= article.title %></a></h2>
	    <h4><time><%= article.date.strftime('%b %e %Y') %></time></h4>

	    <%= article.summary %>

	    <a href="<%= article.url %>">Read more</a>
	  </article>
	<% end %>
</section>

