<section class="articles">
<% blog.articles.each do |article| %>
  <article>
    <h2><a href="<%= article.url %>"><%= article.title %></a></h2>
    <h4><time><%= article.date.strftime('%b %e %Y') %></time></h4>

    <%= article.summary %>

    <a href="<%= article.url %>">Read more</a>
  </article>
<% end %>
</section>