<!doctype html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8">

    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" id="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,initial-scale=1.0" />

    <% if current_page.data.title %>
      <title><%= current_page.data.title + " | Alex Cash" %></title>
    <% else %>
      <title><%= "Alex Cash" %></title>
    <% end %>

    <meta name="description" content="<%= current_page.data.description %>">

    <link rel="shortcut icon" href="http://alexca.sh/favicon.ico" />

    <link rel="canonical" href="http://alexca.sh<%= current_page.url %>">
    <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml">
    <link rel="alternate" type="application/atom+xml" title="Atom" href="/feed.xml">

    <meta property="og:title" content="<%= current_page.data.title || "Alex Cash" %>"/>
    <meta property="og:type" content="<% if current_page.data.notBlog? %>website<% else %>article<% end %>"/>
    <meta property="og:url" content="http://alexca.sh<%= current_page.url %>"/>
    <% if current_page.data.headerImage %>
      <meta property="og:image" content="http://alexca.sh<%= asset_path :images, current_page.data.headerImage %>"/>
    <% else %>
      <meta property="og:image" content="http://alexca.sh<%= asset_path :images, 'social.jpg' %>"/>
    <% end %>
    <meta property="og:site_name" content="alexca.sh"/>
    <meta property="og:description" content="<%= current_page.data.description %>"/>

    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@alexcash">
    <meta name="twitter:creator" content="@alexcash">
    <meta name="twitter:url" content="http://alexca.sh<%= current_page.url %>">
    <meta name="twitter:title" content="<%= current_page.data.title || "Alex Cash" %>">
    <meta name="twitter:description" content="<%= current_page.data.description %>">
    <% if current_page.data.headerImage %>
      <meta name="twitter:image" content="http://alexca.sh<%= asset_path :images, current_page.data.headerImage %>"/>
    <% else %>
      <meta name="twitter:image" content="http://alexca.sh<%= asset_path :images, 'social.jpg' %>"/>
    <% end %>

    <%= stylesheet_link_tag "all" %>

    <% if build? %>
      <script>
          var _gaq=[['_setAccount','UA-29834387-1'],['_trackPageview']];
          (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
          g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
          s.parentNode.insertBefore(g,s);}(document,'script'));

          console.log = function(){
            // no logging in production
          };
      </script>
    <% end %>
  </head>
  <body class="<%= page_classes %><% if not current_page.data.notBlog? %> blog-page<% end %>">
  <!--[if lt IE 9]>
      <div class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</div>
  <![endif]-->
  <% if current_page.data.headerImage %>
    <section class="me" style="background-image: url(<%= asset_path :images, current_page.data.headerImage %>)">
  <% else %>
    <section class="me">
  <% end %>
  <% if not current_page.data.notBlog? %>
    <a href="/" id="back-home"><i class="icon-home"></i></a>
  <% end %>
      <header>
        <% if current_page.data.title %>
          <h1><%= kill_orphans current_page.data.title %></h1>
        <% else %>
          <h1>Alex Cash</h1>
        <% end %>
      </header>
  </section>

    <div class="contain">
      <%= yield %>
    </div>

    <footer>
      <div class="footer-contain">
        <table class="social-table">
          <tr>
            <td><%= image_tag 'social.jpg', :class => 'social-me'%></td>
            <td class="copy">
              <i>Alex Cash is a software engineer and aspiring designer currently building web experiences to delight at&nbsp;Nest.</i>
            </td>
            <td class="socials">
              <nav class="clearfix"><ul class="clearfix">
                <li><a href="/" rel="me"><i class="icon-home"></i></a></li>
                <li><a href="http://www.twitter.com/alexcash" rel="me"><i class="icon-twitter"></i></a></li>
                <li><a href="http://www.github.com/alexcash" rel="me"><i class="icon-github"></i></a></li>
                <li><a href="http://www.linkedin.com/pub/alex-cash/48/460/307" rel="me"><i class="icon-linkedin"></i></a></li>
                <li><a href="http://www.facebook.com/alexcash" rel="me"><i class="icon-facebook"></i></a></li>
                <li><a href="https://plus.google.com/u/0/111755575489705453111?rel=author" rel="me"><i class="icon-google-plus"></i></a>
                <li><a href="/feed.xml" rel="me"><i class="icon-rss"></i></a>
              </ul></nav>
              <span>&copy; <%= Time.now.year %> Alex Cash</span>
            </td>
          </tr>
        </table>
        <div class="social-floater">
          <nav class="clearfix"><ul class="clearfix">
            <li><a href="/" rel="me"><i class="icon-home"></i></a></li>
            <li><a href="http://www.twitter.com/alexcash" rel="me"><i class="icon-twitter"></i></a></li>
            <li><a href="http://www.github.com/alexcash" rel="me"><i class="icon-github"></i></a></li>
            <li><a href="http://www.linkedin.com/pub/alex-cash/48/460/307" rel="me"><i class="icon-linkedin"></i></a></li>
            <li><a href="http://www.facebook.com/alexcash" rel="me"><i class="icon-facebook"></i></a></li>
            <li><a href="https://plus.google.com/u/0/111755575489705453111?rel=author" rel="me"><i class="icon-google-plus"></i></a>
            <li><a href="/feed.xml" rel="me"><i class="icon-rss"></i></a>
          </ul></nav>
          <span>&copy; <%= Time.now.year %> Alex Cash</span>
        </div>
      </div>
    </footer>

  </body>
  <script type="text/template" id="image-grid">
    {{# if(top.imgURL) { }}
      <a target='blank' href='{{{ top.linkURL }}}' class='element top'>
          <img src='{{{ top.imgURL }}}'>
          <div class='info'>
            <div class='text'>
              <b>Now Playing: </b><br>
              {{{ top.title }}} - {{{ top.artist }}}
            </div>
            <div class="equalizer"></div>
          </div>
      </a>
    {{# } }}
    {{# _.each(elements, function(element){ }}
        <a target='blank' href='{{{ element.linkURL }}}' class='element'>
            <img src='{{{ element.imgURL }}}'>
            <div class='info'>
              <div class='text'>
                {{{ element.title }}} - {{{ element.artist }}} <br>
                {{{ element.played }}} tracks played
              </div>
            </div>
        </a>
    {{# }); }}
  </script>
  <% if current_page.data.script %>
    <%= javascript_include_tag "all", :async => false %>
    <%= javascript_include_tag current_page.data.script, :async => false %>
  <% else %>
    <%= javascript_include_tag "all", :async => true %>
  <% end %>


</html>
